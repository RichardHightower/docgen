classDiagram

    class Shape {
        <<Interface>>
    }

    class Polygon {
        <<AbstractClass>>
        int sides
    }

    class Rectangle {
        double length
        double width
        String color
    }

    class Circle {
        double radius
        String color
    }

    class Triangle {
        double base
        double height
    }

    Rectangle --|> Polygon
    Circle ..|> Shape
    Triangle --|> Polygon
